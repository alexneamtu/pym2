{
  "compileOnSave": true,
  "compilerOptions": {
    "noEmit": true,
    "module": "commonjs",
    "inlineSourceMap": true,
    "inlineSources": true,
    "target": "es2018",
    "pretty": true,
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true,
    "outDir": "./dist",
    "noImplicitAny": true,
    "lib": [
      "es5",
      "es6",
      "dom",
      "es2015.core",
      "es2015.collection",
      "es2015.generator",
      "es2015.iterable",
      "es2015.promise",
      "es2015.proxy",
      "es2015.reflect",
      "es2015.symbol",
      "es2015.symbol.wellknown",
      "es2016",
      "es2016.array.include",
      "es2017",
      "es2018",
      "esnext.asynciterable"
    ]
  },
  "include": [
    "**/*.ts"
  ],
  "exclude": [
    "node_modules/**",
    "dist"
  ]
}
